<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageButton
        android:id="@+id/location_details_back_image_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/app_base_margin"
        android:background="@drawable/oval_button"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintBottom_toTopOf="@id/location_details_guideline_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location_details_name_text_view"
        android:layout_width="237dp"
        android:layout_height="23dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/app_base_text_size"
        app:layout_constraintBottom_toTopOf="@id/location_details_guideline_header"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/location_details_guideline_labels"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.319"
        tools:text="Earth" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/location_details_guideline_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="70dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/location_details_guideline_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="100dp" />

    <ProgressBar
        android:id="@+id/location_details_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/app_green_light"
        android:indeterminateTintMode="src_in"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/location_details_guideline_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/location_details_error_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_base_margin"
        android:layout_marginTop="@dimen/app_base_margin"
        android:text="@string/fail_to_download_data_please_try_again"
        android:textColor="@color/black"
        android:textSize="@dimen/app_base_text_size"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_details_progress_bar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/location_details_button_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_base_margin"
        android:background="@drawable/app_rectangle_button"
        android:minHeight="0dp"
        android:paddingHorizontal="@dimen/app_base_padding"
        android:paddingVertical="@dimen/app_base_padding"
        android:text="@string/reload"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/app_base_text_size"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_details_error_text_view" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/error_views_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="location_details_error_text_view, location_details_button_reload"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/content_views_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="location_details_type_label, location_details_type_text, location_details_dimension_label, location_details_dimension_text, location_details_residents_label" />

    <TextView
        android:id="@+id/location_details_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_base_margin"
        android:layout_marginTop="@dimen/app_base_margin"
        android:text="@string/type"
        android:textSize="@dimen/app_base_text_size"
        app:layout_constraintEnd_toStartOf="@id/location_details_guideline_labels"
        app:layout_constraintTop_toBottomOf="@id/location_details_guideline_header" />

    <TextView
        android:id="@+id/location_details_type_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_base_margin"
        android:layout_marginTop="@dimen/app_base_margin"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/app_base_text_size"
        tools:text="Planet"
        app:layout_constraintStart_toEndOf="@id/location_details_guideline_labels"
        app:layout_constraintTop_toBottomOf="@id/location_details_guideline_header" />

    <TextView
        android:id="@+id/location_details_dimension_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_base_margin"
        android:layout_marginTop="@dimen/app_base_margin"
        android:text="@string/dimension"
        android:textSize="@dimen/app_base_text_size"
        app:layout_constraintEnd_toStartOf="@id/location_details_guideline_labels"
        app:layout_constraintTop_toBottomOf="@id/location_details_type_text" />

    <TextView
        android:id="@+id/location_details_dimension_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_base_margin"
        android:layout_marginTop="@dimen/app_base_margin"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/app_base_text_size"
        app:layout_constraintStart_toEndOf="@id/location_details_guideline_labels"
        app:layout_constraintTop_toBottomOf="@id/location_details_type_text"
        tools:text="Dimension C-139" />

    <TextView
        android:id="@+id/location_details_residents_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_base_margin"
        android:layout_marginTop="@dimen/app_base_margin"
        android:text="@string/residents"
        android:textSize="@dimen/app_base_text_size"
        app:layout_constraintEnd_toStartOf="@id/location_details_guideline_labels"
        app:layout_constraintTop_toBottomOf="@id/location_details_dimension_label" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/location_details_recycler_characters"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/app_base_margin"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_details_residents_label"
        tools:listitem="@layout/item_character" />

</androidx.constraintlayout.widget.ConstraintLayout>
